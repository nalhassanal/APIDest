@using Entities
@model List<Entities.WeatherForecast>

<h2>Weather Forecast</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp (C)</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var forecast in Model)
        {
            <tr>
                <td>@forecast.Date</td>
                <td>@forecast.TemperatureC</td>
                <td>@forecast.Summary</td>
            </tr>
        }
    </tbody>
</table>

<br />
<button type="button" class="btn btn-primary mb-3" onclick="location.reload()">
    Refresh
</button>